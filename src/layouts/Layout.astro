---

<header class="flex justify-between items-center p-6 border-b border-gray-200">
  <!-- Logo a la izquierda -->
  <a href="/">
    <img src="/nam-logo.png" alt="ñam.com logo" class="h-16" />
  </a>

  <!-- Botón hamburguesa visible en móvil -->
  <button class="md:hidden text-3xl" onclick="toggleMenu()" aria-label="Abrir menú">
    ☰
  </button>

  <!-- Menú para pantallas medianas y grandes -->
  <nav class="hidden md:flex gap-6 text-lg">
    <a href="/" class="hover:underline">Inicio</a>
    <a href="/blog" class="hover:underline">Archivo</a>
    <a href="/about" class="hover:underline">Sobre</a>
  </nav>

  <!-- Menú móvil -->
  <nav id="mobileMenu" class="hidden absolute top-20 right-4 bg-white p-4 rounded shadow-lg border border-gray-200 z-50">
    <ul class="space-y-3">
      <li><a href="/" class="text-black hover:underline">Inicio</a></li>
      <li><a href="/blog" class="text-black hover:underline">Archivo</a></li>
      <li><a href="/about" class="text-black hover:underline">Sobre</a></li>
    </ul>
  </nav>

  <script>
    function toggleMenu() {
      const menu = document.getElementById('mobileMenu');
      menu.classList.toggle('hidden');
    }
  </script>
</header>

<main class="max-w-3xl mx-auto p-6">
  <slot />
</main>
