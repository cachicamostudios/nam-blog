---
import { Content } from 'astro:content';
const { post } = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>{post.data.title} — Ñam</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      body {
        font-family: system-ui, sans-serif;
        background-color: #fdfaf4;
        color: #111;
        max-width: 720px;
        margin: 2rem auto;
        padding: 1.5rem;
        font-size: 18px;
        line-height: 1.6;
      }
      h1 {
        font-size: 2.4rem;
        margin-bottom: 0.5rem;
      }
      p {
        font-size: 1.2rem;
        color: #666;
      }
      .content {
        margin-top: 1rem;
      }
    </style>
  </head>
  <body>
    <h1>{post.data.title}</h1>
    <p><em>{new Date(post.data.pubDate).toLocaleDateString('es-ES')}</em></p>
    <article class="content">
      <Content content={post} />
    </article>
  </body>
</html>
