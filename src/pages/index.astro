---
import BlogLayout from '../layouts/BlogLayout.astro';
import fs from 'fs';
import path from 'path';

const postsDir = './src/content/blog/';
const posts = fs.readdirSync(postsDir).map(file => ({
  title: file.replace('.md', ''),
  url: `/blog/${file.replace('.md', '')}`
}));
---
