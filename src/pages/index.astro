---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
const posts = await getCollection('blog');
---

<Layout>
  <main class="max-w-3xl mx-auto px-6 py-10">
    <h1 class="text-4xl font-bold mb-8">Bienvenido a Ã‘am</h1>
    <ul class="space-y-6">
      {posts.map(post => (
        <li class="border-b pb-4">
          <a class="text-2xl font-semibold text-blue-600 hover:underline" href={`/blog/${post.slug}`}>{post.data.title}</a>
          <p class="text-sm text-gray-600 mt-1">{post.data.description}</p>
        </li>
      ))}
    </ul>
  </main>
</Layout>
