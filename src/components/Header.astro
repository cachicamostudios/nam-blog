<header class="flex justify-between items-start p-4">
  <!-- Logo reducido sin sombra -->
  <img src="/nam-logo.png" alt="ñam.com logo" class="h-32" />

  <!-- Botón hamburguesa arriba a la derecha -->
  <button class="md:hidden text-3xl ml-auto" onclick="toggleMenu()" aria-label="Abrir menú">
    ☰
  </button>

  <!-- Menú móvil sin sombra -->
  <nav id="mobileMenu" class="hidden absolute top-20 right-4 bg-white p-4 rounded z-50 border border-gray-200">
    <ul class="space-y-2">
      <li><a href="/blog" class="text-black hover:underline">Ver posts antiguos</a></li>
    </ul>
  </nav>

  <script>
    function toggleMenu() {
      const menu = document.getElementById('mobileMenu');
      menu.classList.toggle('hidden');
    }
  </script>
</header>
