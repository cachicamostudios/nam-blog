---
const { frontmatter, children } = Astro.props;
---

<html lang="es">
  <head>…</head>
  <body>
    <a href="/blog" class="back-btn">← Volver</a>

    <article>
      {frontmatter.title && <h1>{frontmatter.title}</h1>}

      {/* ---------- Autor & fecha ---------- */}
      {frontmatter.author && (
        <p class="post-meta">
          ✍️ {frontmatter.author}
          {frontmatter.pubDate && (
            <>
              {' · '}
              <time datetime={frontmatter.pubDate}>
                {new Date(frontmatter.pubDate).toLocaleDateString('es-ES', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                })}
              </time>
            </>
          )}
        </p>
      )}
      {/* ------------------------------------ */}

      {children}
    </article>
  </body>
</html>
